<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="desenvolvimentoandroid.gesad.uece.catalogojbinterface01.Activities.MainActivity">

    <Button
        android:id="@+id/bt_catalogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/ic_catalogo"
        android:text="CATÁLOGOS"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/bt_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/ic_item"
        android:layout_alignParentRight="true"
        android:text="ITENS"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/bt_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/ic_produto"
        android:layout_alignLeft="@id/bt_catalogo"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:text="PRODUTOS"

        />

    <Button
        android:id="@+id/bt_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/ic_clientes"
        android:textAlignment="center"
        android:layout_alignRight="@id/bt_item"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:text="CLIENTES"
        />

    <Button
        android:id="@+id/bt_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/ic_adicionarpedido"
        android:layout_alignLeft="@id/bt_produto"
        android:layout_alignParentBottom="true"
        android:text="PEDIDOS"
        android:layout_marginBottom="35dp"

        />

</RelativeLayout>
